# ============================================
# NOTIFICATION SERVICE - Environment Variables Example
# ============================================
# Copiez ce fichier en .env et remplissez les valeurs

# ============================================
# APPLICATION
# ============================================
SPRING_PROFILES_ACTIVE=prod
SERVER_PORT=8081

# ============================================
# JHIPSTER REGISTRY
# ============================================
JHIPSTER_REGISTRY_URL=http://jhipster-registry:8761
JHIPSTER_REGISTRY_PASSWORD=admin

# ============================================
# DATABASE (MongoDB)
# ============================================
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=ondmoneyNotificationService
MONGODB_URI=mongodb://localhost:27017/ondmoneyNotificationService
# Si authentification requise
MONGODB_USERNAME=
MONGODB_PASSWORD=

# ============================================
# KAFKA (depuis la Gateway)
# ============================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP_ID=notification-service-group
KAFKA_TOPICS_TRANSACTION_CREATED=transaction-created
KAFKA_TOPICS_TRANSACTION_COMPLETED=transaction-completed

# ============================================
# KEYCLOAK (OAuth2 - depuis la Gateway)
# ============================================
KEYCLOAK_URL=http://localhost:9080
KEYCLOAK_REALM=jhipster
SPRING_SECURITY_OAUTH2_CLIENT_PROVIDER_OIDC_ISSUER_URI=http://localhost:9080/realms/jhipster

# ============================================
# REDIS (Cache)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URI=redis://localhost:6379

# ============================================
# ELASTICSEARCH (Optional)
# ============================================
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_URI=http://localhost:9200

# ============================================
# SERVICES EXTERNES - SMS (Lafrica Mobile)
# ============================================
LAFRICA_MOBILE_API_URL=https://api.lafricamobile.com/v1
LAFRICA_MOBILE_API_KEY=your_lafrica_api_key_here
LAFRICA_MOBILE_SENDER_ID=OndMoney
LAFRICA_MOBILE_ENABLED=true

# ============================================
# SERVICES EXTERNES - EMAIL (Gmail SMTP)
# ============================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_specific_password_here
MAIL_FROM=noreply@ondmoney.sn
MAIL_TLS_ENABLED=true

# Pour Gmail, utilisez un mot de passe d'application:
# https://support.google.com/accounts/answer/185833

# ============================================
# SERVICES EXTERNES - PUSH NOTIFICATIONS (Firebase)
# ============================================
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY_ID=your_private_key_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your_client_id
# Ou utiliser le fichier de configuration
FIREBASE_CREDENTIALS_PATH=/path/to/firebase-service-account.json

# ============================================
# MONITORING (Optional)
# ============================================
ZIPKIN_URL=http://localhost:9411
PROMETHEUS_ENABLED=true

# ============================================
# LOGGING
# ============================================
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_APP=INFO

# ============================================
# DOCKER / DEPLOYMENT
# ============================================
DOCKER_REGISTRY=ghcr.io
DOCKER_IMAGE_NAME=ondmoney/notification-service
DOCKER_IMAGE_TAG=latest

# ============================================
# KUBERNETES
# ============================================
K8S_NAMESPACE=ondmoney
